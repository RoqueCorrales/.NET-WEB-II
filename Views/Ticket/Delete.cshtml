@model Proyecto_Web_ll.Models.Ticket

@{
    ViewData["Title"] = "Delete";
}


<div class="container-fluid panel panel-default">
<h3>Are you sure you want to delete this Ticket?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Title:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt>
            Detail:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Detalle)
        </dd>
        <dt>
            Person who reposted:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PersonaReporte)
        </dd>
        <dt>
           Client's Identification:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cliente.CedulaJuridica)
        </dd>
        <dt>
            Condition:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Estado.Nombre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
    <br>
    </div>
</div>
