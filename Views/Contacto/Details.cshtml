@model Proyecto_Web_ll.Models.Contacto

@{
    ViewData["Title"] = "Details";
}

<h2>Details Contact</h2>



<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-sm-6 col-md-4">
                        <img src="~/images/logo.png" alt="" class="img-rounded img-responsive" />
                    </div>
                    <div class="col-sm-6 col-md-8">
                        <h4>
                           @Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.Apellido_Uno) </h4>
                    
                        <p>
                            <i class="glyphicon glyphicon-envelope"></i>Email: @Html.DisplayFor(model => model.Correo)
                            <br />
                            <i class="glyphicon glyphicon-globe"></i><a>Occupation: @Html.DisplayFor(model => model.Puesto)</a>
                            <br />
                            <i class="glyphicon glyphicon-gift"></i> Phone: @Html.DisplayFor(model => model.Telefono)</p>
                            
                            <i class="glyphicon glyphicon-gift"></i> Client's Identification:  @Html.DisplayFor(model => model.Cliente.CedulaJuridica)</p>
                            <br>
                        <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
                    </div>

 
                </div>
            </div>
        </div>
    </div>



</div>
