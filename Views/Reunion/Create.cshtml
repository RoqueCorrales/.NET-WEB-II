@model Proyecto_Web_ll.Models.Reunion

@{
    ViewData["Title"] = "Create";
}

<div class="panel panel-default">
  <div class="panel-heading">Create Meeting</div>
  <div class="panel-body">

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClienteID" class="control-label">Client's Identification</label>
                <select asp-for="ClienteID" class ="form-control" asp-items="ViewBag.ClienteID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label">Title</label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnrollmentDate" class="control-label">Date</label>
                <input asp-for="EnrollmentDate" class="form-control" />
                <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Virtual" /> @Html.DisplayNameFor(model => model.Virtual)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioID" class="control-label">UserName</label>
                <select asp-for="UsuarioID" class ="form-control" asp-items="ViewBag.UsuarioID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
