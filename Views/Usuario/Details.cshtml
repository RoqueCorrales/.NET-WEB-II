@model Proyecto_Web_ll.Models.Usuario

@{
    ViewData["Title"] = "Details";
}


<h2>Details User</h2>



<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-sm-6 col-md-4">
                        <img src="~/images/logo.png" alt="" class="img-rounded img-responsive" />
                    </div>
                    <div class="col-sm-6 col-md-8">
                        <h4>
                           @Html.DisplayFor(model => model.Nombre)  @Html.DisplayFor(model => model.Apellido_Uno)</h4>
                        
                        <p>
                            <br />
                            <i class="glyphicon glyphicon-globe"></i><a> User: @Html.DisplayFor(model => model.User)</a>
                            <br />
                            <i class="glyphicon glyphicon-envelope"></i> Email: @Html.DisplayFor(model => model.Correo)
                            <br />
                            <i class="glyphicon glyphicon-globe"></i><a> Password: @Html.DisplayFor(model => model.Contrasenna)</a>
                            <br />
                            <i class="glyphicon glyphicon-gift"></i>Admin? @Html.DisplayFor(model => model.Permisos)</p>
                              <br />
                             <i class="glyphicon glyphicon-gift"></i>Phone: @Html.DisplayFor(model => model.Telefono)</p>
  <br />
                            <i class="glyphicon glyphicon-gift"></i> Work Area:  @Html.DisplayFor(model => model.Puesto)</p>
                            <br>
                          <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
                           <a asp-action="Index">Back to List</a>
                    </div>

 
                </div>
            </div>
        </div>
    </div>



</div>
