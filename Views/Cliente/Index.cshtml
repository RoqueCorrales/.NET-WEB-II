@model IEnumerable<Proyecto_Web_ll.Models.Cliente>



@{
    ViewData["Title"] = "Index";
}
@if(Session.isSingin){
<strong class="strong">LIST OF CLIENTS</strong>
<br>
<br>

<div class="table-responsive">
<table class="table table-hover">
    <thead>
        <tr>
                <th>
                    Name
                </th>
                <th>
                    Identity Card
                </th>
                <th>
                   Web Page
                </th>
                <th>
                    Address
                </th>
                <th>
                   Phone
                </th>
            <th>
                Work Area
            </th>
            <th>Settings</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CedulaJuridica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaginaWeb)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DireccionFisica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sector.Nombre)
            </td>
            <td>
                <a class="glyphicon glyphicon-pencil" asp-action="Edit" asp-route-id="@item.ID"></a>
                <a class="glyphicon glyphicon-duplicate" asp-action="Details" asp-route-id="@item.ID"></a> 
                <a class="glyphicon glyphicon-remove-circle" asp-action="Delete" asp-route-id="@item.ID"></a>
            </td>
        </tr>
}
    </tbody>
</table>
<button type="button" class="btn btn-secondary center-block"> <a asp-action="Create">Create New</a></button>
</div>
}