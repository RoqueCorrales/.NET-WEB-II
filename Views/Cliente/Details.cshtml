@model Proyecto_Web_ll.Models.Cliente

@{
    ViewData["Title"] = "Details";
}

<h2>Details Client</h2>



<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-sm-6 col-md-4">
                        <img src="~/images/logo.png" alt="" class="img-rounded img-responsive" />
                    </div>
                    <div class="col-sm-6 col-md-8">
                        <h4>
                          Name:  @Html.DisplayFor(model => model.Nombre)</h4>
                        <small><cite >Address:  @Html.DisplayFor(model => model.DireccionFisica)<i class="glyphicon glyphicon-map-marker">
                        </i></cite></small>
                        <p>
                            <i class="glyphicon glyphicon-envelope"></i> Web Page: @Html.DisplayFor(model => model.PaginaWeb)
                            <br />
                            <i class="glyphicon glyphicon-globe"></i><a>Indentification:  @Html.DisplayFor(model => model.CedulaJuridica)</a>
                            <br />
                            <i class="glyphicon glyphicon-gift"></i> Phone:  @Html.DisplayFor(model => model.telefono)</p>
                            
                            <i class="glyphicon glyphicon-gift"></i> Sector's Name:   @Html.DisplayFor(model => model.Sector.Nombre)</p>
                            <br>
                          <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
                           <a asp-action="Index">Back to List</a>
                    </div>

 
                </div>
            </div>
        </div>
    </div>



</div>
